{
  "name": "AzuraCast on Heroku",
  "description": "Deploy AzuraCast, a self-hosted web radio management suite, on Heroku using Docker containers.",
  "repository": "https://github.com/santi-rios/ladoB",
  "logo": "https://www.azuracast.com/img/logo.png",
  "keywords": [
    "radio",
    "streaming",
    "azuracast",
    "music",
    "web-radio",
    "docker"
  ],
  "stack": "container",
  "addons": [
    {
      "plan": "heroku-postgresql:mini",
      "as": "DATABASE"
    },
    {
      "plan": "heroku-redis:mini",
      "as": "REDIS"
    }
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "standard-2x"
    }
  },
  "env": {
    "BASIC_AUTH_USER": {
      "description": "Username for basic HTTP authentication (recommended for restricting access)",
      "required": false
    },
    "BASIC_AUTH_PASSWORD": {
      "description": "Password for basic HTTP authentication (recommended for restricting access)",
      "required": false
    },
    "ENABLE_REDIS": {
      "description": "Enable Redis caching",
      "value": "true",
      "required": true
    },
    "ENABLE_ADVANCED_FEATURES": {
      "description": "Enable advanced AzuraCast features",
      "value": "true",
      "required": false
    }
  },
  "buildpacks": [],
  "image": "heroku/heroku:24"
}
