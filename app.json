{
  "name": "AzuraCast on Heroku",
  "description": "Self-hosted web radio management suite running in a Docker container on Heroku",
  "keywords": [
    "azuracast",
    "radio",
    "streaming",
    "docker",
    "broadcasting"
  ],
  "website": "https://www.azuracast.com/",
  "repository": "https://github.com/santi-rios/ladoB",
  "logo": "https://www.azuracast.com/img/logo.png",
  "success_url": "/",
  "stack": "container",
  "env": {
    "BASIC_AUTH_USER": {
      "description": "Username for basic authentication (optional, but recommended to restrict access)",
      "value": "",
      "required": false
    },
    "BASIC_AUTH_PASSWORD": {
      "description": "Password for basic authentication (optional, but recommended to restrict access)",
      "value": "",
      "required": false
    },
    "AZURACAST_HTTP_PORT": {
      "description": "HTTP port for AzuraCast",
      "value": "8080",
      "required": true
    },
    "ENABLE_REDIS": {
      "description": "Enable Redis for caching",
      "value": "true",
      "required": true
    },
    "ENABLE_ADVANCED_FEATURES": {
      "description": "Enable advanced AzuraCast features",
      "value": "true",
      "required": false
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "standard-2x"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:mini",
      "as": "DATABASE"
    },
    {
      "plan": "heroku-redis:mini",
      "as": "REDIS"
    }
  ],
  "buildpacks": []
}
